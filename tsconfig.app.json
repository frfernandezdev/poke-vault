{
  "extends": "./tsconfig.json",
  "include": [
		"next-env.d.ts", 
		"**/*.ts", 
		"**/*.tsx", 
		".next/types/**/*.ts"
	],
  "exclude": [
		"node_modules",
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
	]
}
