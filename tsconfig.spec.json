		"next-env.d.ts", 
		".next/types/**/*.ts",
		"**/*.ts", 
		"**/*.tsx", 
    "src/**/*.test.ts",
    "src/**/*.spec.ts",
    "src/**/*.test.tsx",
    "src/**/*.spec.tsx",
    "src/**/*.test.js",
    "src/**/*.spec.js",
    "src/**/*.test.jsx",
    "src/**/*.spec.jsx",
    "src/**/*.d.ts"
  ],
	"exclude": [
		"cypress.config.ts",
		"cypress",
		"cypress/**/*.cy.tsx"
	]
}
